#breadcrumbs 
  = link_to 'All Groups', groups_path
  >>
  = link_to @group.name, group_path(@group)
  >>
  = @message.subject

%h2.subject 
  = @message.subject
  %span
    = pluralize(@messages.length, "message")
.page-info.group
  .left
    = page_entries_info @messages, :entry_name => 'message'
  .right
    = will_paginate @messages 
- @messages.each do |message|
  .message
    %p.info.group
      %span.left
        = message.author
      %span.right
        = message.created_at.strftime("%b %d, %Y %H:%M")
    .body
      = simple_format(message.body)
        
.page-info.group
  .left
    = link_to "<< Back to Conversations", group_path(@group)
  .right
    = will_paginate @messages
